// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "auto_install_extensions": {
    "html": true,
    "nix": true,
    "dart": true,
    "dockerfile": true,
    "docker-compose": true,
    "nightfox.zed": true,
    "java": true,
    "lua": true
  },
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Carbonfox"
  },
  "vim_mode": true,
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "relative_line_numbers": true,
  "outline_panel": {
    "dock": "right"
  },
  "terminal": {
    "dock": "bottom"
  },
  "collaboration_panel": {
    "dock": "right"
  },
  "project_panel": {
    "dock": "right"
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  }
}
